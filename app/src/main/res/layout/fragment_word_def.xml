<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/containerWordDef"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#01182B">

    <com.example.worddef_fragment.fragments.fragmentWordDef.elements.btn.BtnAddWordDef
        android:id="@+id/btnWordDefAddWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="32dp"
        android:clickable="true"
        android:focusable="auto"
        android:src="@drawable/plus"
        app:backgroundTint="#111F29"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.example.worddef_fragment.fragments.fragmentWordDef.elements.btn.BtnOpt
        android:id="@+id/btnWordDefOpt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/icon_menu"
        app:backgroundTint="#111F29"
        app:layout_constraintBottom_toTopOf="@+id/btnWordDefSrt"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.example.worddef_fragment.fragments.fragmentWordDef.elements.btn.BtnSrt
        android:id="@+id/btnWordDefSrt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/options"
        app:backgroundTint="#111F29"
        app:layout_constraintBottom_toTopOf="@+id/btnWordDefAddWord"
        app:layout_constraintEnd_toEndOf="parent" />

    <ScrollView
        android:id="@+id/scrollPanelWordDef"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="64dp"
        android:background="#394C73"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/pnlWordDefVrt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="200dip">

        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/tvWrdDefTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        android:textColor="#CDCFF6"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>